<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="propertiesTab" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.ximias.gui.tabs.Properties">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefWidth="200.0" spacing="20.0">
               <children>
                  <VBox spacing="29.0">
                     <children>
                        <Label text="Background brightness"/>
                        <Label text="Background transparency"/>
                        <Label text="Effect transparency"/>
                        <HBox>
                           <children>
                              <Button id="defaults" alignment="TOP_LEFT" centerShape="false" mnemonicParsing="false" onAction="#restoreDefaults" text="Defaults" />
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Slider fx:id="backgroundBrightnessSlider" blockIncrement="0.01" majorTickUnit="0.499" max="1.0" min="0.001" minorTickCount="4" showTickLabels="true" showTickMarks="true" value="0.6" />
                        <Slider fx:id="backgroundIntensitySlider" blockIncrement="0.001" majorTickUnit="0.499" max="1.0" min="0.001" minorTickCount="4" nodeOrientation="LEFT_TO_RIGHT" showTickLabels="true" showTickMarks="true" value="0.1" />
                        <Slider fx:id="effectIntensitySlider" blockIncrement="0.001" majorTickUnit="0.499" max="1.0" min="0.001" minorTickCount="4" prefHeight="14.0" prefWidth="140.0" showTickLabels="true" showTickMarks="true" value="1.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox fillHeight="false" spacing="5.0">
               <children>
                  <Label contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" text="Preview" />
                  <Separator HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets top="8.0" />
                     </HBox.margin>
                  </Separator>
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <ToggleButton fx:id="debugTextToggle" mnemonicParsing="false" text="Debug info" />
                  <Button mnemonicParsing="false" onAction="#addExampleEffect" text="Green effect" />
                  <Button mnemonicParsing="false" onAction="#addExampleDarkEffect" text="Black effect" />
                  <Label alignment="CENTER" text="Background:">
                     <HBox.margin>
                        <Insets top="4.0" />
                     </HBox.margin>
                  </Label>
                  <ChoiceBox fx:id="previewBackgroundSelector" />
               </children>
            </HBox>
            <HBox id="previewContainer" prefHeight="0.0" prefWidth="0.0" VBox.vgrow="ALWAYS">
               <children>
                  <AnchorPane fx:id="propertiesPreviewContainer" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
