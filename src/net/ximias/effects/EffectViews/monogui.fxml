<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@../../../../style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.ximias.effects.EffectViews.ColorEffectGUIView">
   <children>
      <TabPane fx:id="tabPane" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab text="Effect View">
            <content>
              <AnchorPane fx:id="effectViewRoot" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Canvas fx:id="canvas" height="319.0" width="530.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Properties">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <HBox prefWidth="200.0" spacing="20.0">
                                 <children>
                                    <VBox spacing="29.0">
                                       <children>
                                          <Label text="Background brightness" textFill="#d9d9d9" />
                                          <Label text="Background transparency" textFill="#d9d9d9" />
                                          <Label text="Effect transparency" textFill="#d9d9d9" />
                                          <HBox />
                                       </children>
                                    </VBox>
                                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Slider fx:id="backgroundBrightnessSlider" blockIncrement="0.01" majorTickUnit="0.499" max="1.0" min="0.001" minorTickCount="4" onMouseReleased="#propertiesChanged" showTickLabels="true" showTickMarks="true" value="0.6" />
                                          <Slider fx:id="backgroundIntensitySlider" blockIncrement="0.001" majorTickUnit="0.499" max="1.0" min="0.001" minorTickCount="4" nodeOrientation="LEFT_TO_RIGHT" onMouseReleased="#propertiesChanged" showTickLabels="true" showTickMarks="true" value="0.1" />
                                          <Slider fx:id="effectIntensitySlider" blockIncrement="0.001" majorTickUnit="0.499" max="1.0" min="0.001" minorTickCount="4" onMouseDragReleased="#propertiesChanged" onMouseReleased="#propertiesChanged" prefHeight="14.0" prefWidth="140.0" showTickLabels="true" showTickMarks="true" value="1.0" />
                                       </children>
                                    </VBox>
                                 </children>
                                    </HBox>
                              <HBox spacing="5.0" VBox.vgrow="NEVER">
                                 <children>
                                    <Button id="defaults" alignment="TOP_LEFT" centerShape="false" mnemonicParsing="false" onAction="#restoreDefaults" text="Defaults" HBox.hgrow="ALWAYS" />
                                    <ToggleButton fx:id="debugTextToggle" mnemonicParsing="false" text="Draw Debug" />
                                    <Button mnemonicParsing="false" onAction="#addExampleEffect" text="Effect preview" />
                                 </children>
                              </HBox>
                              <HBox fillHeight="false" spacing="5.0">
                                 <children>
                                    <Label contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" text="Preview" />
                                    <Separator HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets top="8.0" />
                                       </HBox.margin>
                                    </Separator>
                                 </children>
                              </HBox>
                              <HBox id="previewContainer" fx:id="propertiesPreviewContainer" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <Canvas fx:id="propertiesPreview" height="61.0" width="333.0" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Debug Log">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <WebView fx:id="logView" prefHeight="357.0" prefWidth="596.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab disable="true" text="Keyboard [N/A]">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab disable="true" text="Philips Hue [N/A]">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
